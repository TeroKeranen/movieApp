<!DOCTYPE html>
<html lang="en">
<!--  include head -->
<%- include('./partials/head.ejs') %>

    <body>

        <!-- include navbar -->
        <%- include('./partials/nav.ejs') %>

            <main>
                <section class="changepass-form">
                    <form action="/changepassword" method="POST">

                        <% if(error.length <=0) { %>

                            <div class="error-message error-hide">
                                <p><%= error %></p>
                            </div>

                            <% } else { %>
                                <div class="error-message">
                                    <p><%= error %></p>
                                </div>
                            <% } %>

                            <h1>vaihda salasanasi</h1>

                            <div>
                                <label for="oldpass">vanha salasana:</label>
                                <input type="password" id="oldpass" name="oldpass" placeholder="old password" required>
                            </div>

                            <div>
                                <label for="newpass">uusi salasana</label>
                                <input type="password" id="newpass" name="newpass" placeholder="newpass" required>
                            </div>

                            
                            <button type="submit">vaihda salasana</button>
                    </form>
                </section>
            </main>

    </body>

</html>