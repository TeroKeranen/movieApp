<!DOCTYPE html>
<html lang="en">


<%- include('./partials/head.ejs') %>

<body>

    <!-- include navbar -->
    <%- include('./partials/nav.ejs') %>

    <h1><%= message %></h1>

    <header>
        <form id="form" action="/home" method="POST">
            <input type="text" placeholder="Search" id="search" class="search" name="search">
        </form>
    </header>

    <main id="main">

        <% for (let i = 0; i < movieTitle.length; i++) { %>
            <div class="movie">
                
                
                <img src="https://image.tmdb.org/t/p/w500/<%=poster[i]%>" alt="Image" > 
            
                <div class="movie-info">
                    <h3><%= movieTitle[i] %></h3>
                    <span class="green"><%= vote[i] %></span>
                </div>
                
                <div class="overview">
                    <%=overview[i] %>
                </div>
            </div>
            
        <% } %>


    </main>
    

    <script>
        
    </script>
</body>
</html>