<!DOCTYPE html>
<html lang="en">


<%- include('./partials/head.ejs') %>

<body>

    <!-- include navbar -->
    <%- include('./partials/nav.ejs') %>

    <div class="welcome-container">
        <h1><%= message %></h1>

        <div class="search-form">
        <form id="form" action="/home" method="POST">
            <input type="text" placeholder="Search movie" id="search" class="search" name="search">
            <button type="submit">Search</button>
        </form>
        </div>
        
    </div>

    <main id="main">

        <% for (let i = 0; i < movieTitle.length; i++) { %>
            <div class="movie">
                
                
                <img src="https://image.tmdb.org/t/p/w500/<%=poster[i]%>" alt="Image" > 
            
                <div class="movie-info">
                    <h3><%= movieTitle[i] %></h3>
                    <span class="<%=color(vote[i])%>"><%= vote[i] %></span>
                </div>
                
                <div class="overview">
                    <%=overview[i] %>
                </div>
            </div>
            
        <% } %>


    </main>
    

    <script>
        
    </script>
</body>
</html>